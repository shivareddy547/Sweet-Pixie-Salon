<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">List of Appointments</div>
  <div class="panel-body">

  </div>
<table id="appointments" class="table table-striped table-bordered" cellspacing="0" width="100%">
<thead>
<tr>
  <th>Customer Name</th>
  <th>Customer Age</th>
  <th>Appointment Date</th>
  <th>Time Slot(Hours)</th>

</tr>
</thead>
<tfoot>
<tr>
  <th>Customer Name</th>
  <th>Customer Age</th>
  <th>Appointment Date</th>
  <th>Time Slot(Hours)</th>
</tr>
</tfoot>
<tbody>
<% @appointments.each do |each_app| %>
<tr>
  <td><%= each_app.customer_name %></td>
  <td><%= each_app.customer_age %></td>
  <td><%= each_app.appointment_date %></td>
  <td><%= each_app.time_slot %></td>

</tr>
<% end %>
</tbody>
</table>

</div>
<script>

    $(document).ready(function() {
        $('#appointments').DataTable();
    } );
</script>